<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <registerMouseCursor id="textFieldCursor" filename="textfield/mouse-cursor-textfield.png" hotspotX="3" hotspotY="12"/>

  <!-- console panel style -->
  <style id="nifty-console-panel">
    <attributes childLayout="vertical" backgroundColor="#111111cc" />
    <effect>
      <onActive name="border" border="5px" color="#222f" />
    </effect>
  </style>

  <!-- nifty-console-listbox -->

  <style id="nifty-console-listbox">
    <attributes paddingLeft="4px" />
  </style>
  <style id="nifty-console-listbox#scrollpanel">
    <attributes focusable="true" borderBottom="5px" borderColor="#222"/>
  </style>
  <style id="nifty-console-listbox#bottom-right">
    <attributes width="20px" height="20px" />
  </style>
  <style id="nifty-console-listbox-item" base="console-font">
    <attributes height="14px" width="100%" align="left" textVAlign="center" textHAlign="left" />
    <effect>
      <onCustom customKey="focus" name="colorBar" post="false" color="#4446" neverStopRendering="true" timeType="infinite" />
    </effect>
  </style>

  <!-- nifty-console-textfield -->

  <style id="nifty-console-textfield#panel">
    <attributes childLayout="overlay" height="18px"/>
    <effect>
      <onHover name="changeMouseCursor" id="textFieldCursor" />
      <onActive name="border" border="1px,0px,0px,0px" color="#222f" />
    </effect>
  </style>
  <style id="nifty-console-textfield#field">
    <attributes childLayout="center" childClip="true" paddingLeft="4px"/>
  </style>
  <style id="nifty-console-textfield#text" base="console-font">
    <attributes selectionColor="#f00f" visibleToMouse="false" align="left" textHAlign="left" textVAlign="center" valign="center"/>
  </style>
  <style id="nifty-console-textfield#cursor-panel">
    <attributes childLayout="absolute" paddingLeft="4px"/>
  </style>
  <style id="nifty-console-textfield#cursor">
    <attributes filename="console_cursor_empty.png"/>
    <effect>
      <onCustom name="imageOverlayPulsate" period="400" timeType="infinite" pulsateType="rectangle" filename="console_cursor.png" post="true"/>
    </effect>
  </style>

</nifty-styles>
