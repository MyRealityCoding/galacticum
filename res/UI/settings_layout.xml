<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://
www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-
gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
<resourceBundle id="dialog" filename="dialog/dialog" />
<useStyles filename="nifty-galacticum-styles.xml" />
<useStyles filename="UI/custom_styles.xml" />
<useControls filename="nifty-default-controls.xml" />
<screen id="start" controller="de.myreality.galacticum.states.SettingsGameState">
    <!-- Background -->
	<layer  padding="10%" childLayout="vertical" backgroundImage="images/backgrounds/main.png">
		<effect>
      		<onActive name="changeMouseCursor" id="gameCursor" />
      		<onActive name="fade" start="#ff" end="#66" length="1500"/>
      	</effect>
		<!-- Left -->
		<panel childLayout="vertical" id="titleLeft">
				<effect>
	      			<onActive name="fade" start="#00" end="#ff" length="2000"/>
	      		</effect>
			<text
				id="txtSettings"
				font="galacticum/pixel-font-24.fnt"
				text="${dialog.settings}"
				textVAlign="top"
				color="#a6ac3f"
				marginBottom="50px"
			/>
			
			
			<control
				name="label"
				id="lblSettingsGeneral"
				text="${dialog.settings-general}"
				align="left"
				marginBottom="5px"
			/>
			
			<!-- General Settings -->
			<panel childLayout="horizontal">
				<!-- Language -->
				<panel childLayout="vertical" marginRight="30px"
				       controller="de.myreality.galacticum.ui.controllers.LanguageController">
					<control
						name="label"
						id="lblSettingsLanguage"
						text="${dialog.settings-general-lang}"
						align="left"
						font="galacticum/pixel-font-12.fnt"
						color="#444"
						marginBottom="10px"
					/>
					<control id="drpLanguage" name="dropDown" width="250px" />
				</panel>
				
				<!-- Difficulty -->
				<panel childLayout="vertical"
				       controller="de.myreality.galacticum.ui.controllers.GameDifficultyController">
					<control
						name="label"
						id="lblSettingsDifficulty"
						text="${dialog.settings-general-diff}"
						align="left"
						font="galacticum/pixel-font-12.fnt"
						color="#444"
						marginBottom="10px"
					/>
					<control id="drpDifficulty" name="dropDown" width="250px" />
				</panel>
			</panel>
			
			<control
				name="label"
				id="lblSettingsGraphics"
				text="${dialog.settings-graphics}"
				align="left"
				marginBottom="5px"
				marginTop="15px"
			/>
			
			<!-- Graphics Settings -->
			<panel childLayout="horizontal">
				<!-- Resolution -->
				<panel childLayout="vertical" marginRight="30px"
				       controller="de.myreality.galacticum.ui.controllers.DisplayResolutionController">
					<control
						name="label"
						id="lblGraphicsResolution"
						text="${dialog.settings-graphics-res}"
						align="left"
						font="galacticum/pixel-font-12.fnt"
						color="#444"
						marginBottom="10px"						
					/>
					<control id="drpResolution" name="dropDown" width="250px" 
					         />
				</panel>
				
				<!-- Camera Distance -->
				<panel childLayout="vertical"
				       controller="de.myreality.galacticum.ui.controllers.CameraDistanceController">
					<control
						name="label"
						id="lblSettingsCameraDistance"
						text="${dialog.settings-graphics-render}"
						align="left"
						font="galacticum/pixel-font-12.fnt"
						color="#444"
						marginBottom="10px"
					/>
					<control id="drpCameraDistance" name="dropDown" width="250px" />
				</panel>
			</panel>
			
			<panel childLayout="horizontal">
				<panel childLayout="vertical" marginRight="30px" width="250px">
					<!-- Fullscreen -->
					<panel childLayout="horizontal" marginTop="20px">
						<control id="cbxFullscreen" name="checkbox"/>
						<control name="label" text="${dialog.settings-graphics-fullscreen}" color="#a6ac3f" marginLeft="10px"/>
					</panel>
					
					<!-- Vsync -->
					<panel childLayout="horizontal" marginTop="20px">
						<control id="cbxVsync" name="checkbox"/>
						<control name="label" text="${dialog.settings-graphics-vsync}" color="#a6ac3f" marginLeft="10px"/>
					</panel>
				</panel>
				<panel childLayout="vertical">
					<!-- Particles -->
					<panel childLayout="horizontal" marginTop="20px">
						<control id="cbxParticles" name="checkbox"/>
						<control name="label" text="${dialog.settings-graphics-particles}" color="#a6ac3f" marginLeft="10px"/>
					</panel>
					
					<!-- Lighting -->
					<panel childLayout="horizontal" marginTop="20px">
						<control id="cbxLighting" name="checkbox"/>
						<control name="label" text="${dialog.settings-graphics-lighting}" color="#a6ac3f" marginLeft="10px"/>
					</panel>
				</panel>
			</panel>
			<panel childLayout="horizontal" marginTop="40px">
				<control
					id="btnApply"
					name="button" 
					label="${dialog.apply}"
					marginRight="5px"
					width="30%">
					<interact onClick="onClick()"/>
					<effect>
						<onActive name="fade" start="#ff" end="#ff"/>
					</effect>
				</control>
				<control
					id="btnAbort" 
					name="button" 
					label="${dialog.back}">
					<effect>
						<onActive name="fade" start="#ff" end="#ff"/>
					</effect>
				</control>
			</panel>
			
		</panel>
	</layer>
	<layer childLayout="vertical">
		<panel width="100%" height="20%" childLayout="vertical" paddingRight="15px" paddingTop="15px">
      						      		
      		<!-- Version -->
      		<text		
				id="txtVersion"
				text="v. 0.0"
				font="galacticum/pixel-font-12.fnt"
				color="#333"				
				width="100%"
				textHAlign="right"
				controller="de.myreality.galacticum.ui.controllers.VersionTextController"
			/>
      		</panel>
	</layer>
</screen>
</nifty>