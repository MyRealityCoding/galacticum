<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://
www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-
gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
<resourceBundle id="dialog" filename="dialog/dialog" />
<useStyles filename="nifty-galacticum-styles.xml" />
<useStyles filename="UI/custom_styles.xml" />
<useControls filename="nifty-default-controls.xml" />
<screen id="start" controller="de.myreality.galacticum.states.CreditsGameState">
    <!-- Background -->
	<layer childLayout="horizontal" backgroundImage="images/backgrounds/main.png">
		<effect>
      		<onActive name="changeMouseCursor" id="gameCursor" />
      		<onActive name="fade" start="#ff" end="#66" length="1500"/>
      	</effect>
		<!-- Left -->
		<panel padding="10%" paddingRight="0px" childLayout="vertical" id="titleLeft" width="60%">
			<text
				id="txtCaption"
				height="15%"
				font="galacticum/pixel-font-24.fnt"
				text="${dialog.credits}"
				textVAlign="top"
				color="#a6ac3f"
				>
				<effect>
      				<onActive name="fade" start="#00" end="#ff" length="2000"/>
      			</effect>
				</text>
				<panel height="70%" childLayout="vertical">
					<effect>
      				<onActive name="fade" start="#00" end="#ff" length="3000"/>
      				</effect>
      				<!-- Credits -->
      				<control
      					text="${dialog.developer}"
      					name="label"
      					font="galacticum/pixel-font-16.fnt"
      					color="#444"
      					align="left"
      					/>
      				<control
      					marginTop="15px"
      					text="Miguel Gonzalez"
      					name="label"
      					font="galacticum/pixel-font-20.fnt"
      					align="left"
      					/>
      				<control
      					marginTop="15px"
      					text="Reinier Klarenberg"
      					name="label"
      					font="galacticum/pixel-font-20.fnt"
      					align="left"
      					/>
      					
      				<control
      					marginTop="40px"
      					text="${dialog.graphics}"
      					name="label"
      					font="galacticum/pixel-font-16.fnt"
      					color="#444"
      					align="left"
      					/>
      				<control
      					marginTop="15px"
      					text="Miguel Gonzalez"
      					name="label"
      					font="galacticum/pixel-font-20.fnt"
      					align="left"
      					/>
      					
      				<control
      					marginTop="40px"
      					text="${dialog.music}"
      					name="label"
      					font="galacticum/pixel-font-16.fnt"
      					color="#444"
      					align="left"
      					/>
      				<control
      					marginTop="15px"
      					text="Miguel Gonzalez"
      					name="label"
      					font="galacticum/pixel-font-20.fnt"
      					align="left"
      					/>
      				<control
						id="btnAbort" 
						name="button" 
						label="${dialog.back}"
						marginTop="50px"
						width="40%"
					>
					<effect>
						<onActive name="fade" start="#ff" end="#ff"/>
					</effect>
					</control>
				</panel>			
		</panel>		
	</layer>
	<layer childLayout="vertical">
		<panel width="100%" height="20%" childLayout="vertical" paddingRight="15px" paddingTop="15px">
      						      		
      		<!-- Version -->
      		<text		
				id="txtVersion"
				text="v. 0.0"
				font="galacticum/pixel-font-12.fnt"
				color="#333"				
				width="100%"
				textHAlign="right"
				controller="de.myreality.galacticum.ui.controllers.VersionTextController"
			/>
      		</panel>
	</layer>
</screen>
</nifty>