<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://
www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-
gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
<resourceBundle id="dialog" filename="dialog/dialog" />
<useStyles filename="nifty-galacticum-styles.xml" />
<useStyles filename="UI/custom_styles.xml" />
<useControls filename="nifty-default-controls.xml"/>
<useControls filename="nifty-myreality-controls.xml"/>
<useControls filename="UI/universe-list-element.xml"/>

<screen id="start" controller="de.myreality.galacticum.states.LoadUniverseGameState">
    <!-- Background -->
	<layer padding="10%" childLayout="vertical" backgroundImage="images/backgrounds/main.png">
		<effect>
      		<onActive name="changeMouseCursor" id="gameCursor" />
      		<onActive name="fade" start="#ff" end="#66" length="1500"/>
      	</effect>
		<!-- Left -->
		<panel childLayout="vertical" id="titleLeft">
		
			<effect>
	      		<onActive name="fade" start="#00" end="#ff" length="2000"/>
	      	</effect>
	      	
			<panel childLayout="vertical">					
	      		<text
					id="txtCaption"
					font="galacticum/pixel-font-24.fnt"
					text="${dialog.loaduniverse}"
					textVAlign="top"
					color="#a6ac3f"
					marginBottom="50px"
				/>
				<control
					name="label"
					id="lblName"
					text="Select an existing universe:"
					align="left"
					color="#444"
					marginBottom="15px"
					textVAlign="top"			
				/>
				<control 
					name="listBox"
					id="worldList"
					vertical="optional"
					horizontal="off"
					displayItems="4"
					selection="single"
					forceSelection="true"
					viewConverterClass="de.myreality.galacticum.ui.UniverseViewConverter"
					>
					<control name="universe-element"/>
				</control>
			</panel>
			<panel childLayout="horizontal" marginTop="40px">
				<control
					id="btnLoadWorld" 
					name="button" 
					label="${dialog.load-world}"
					width="30%">
					<interact onClick="onClick()"/>
					<effect>
						<onActive name="fade" start="#ff" end="#ff"/>
					</effect>
				</control>
				<control
					id="btnAbort" 
					name="button" 
					label="${dialog.back}"					
					marginLeft="5px">
					<effect>
						<onActive name="fade" start="#ff" end="#ff"/>
					</effect>
				</control>
				<control
					id="btnRemoveWorld" 
					name="button" 
					label="${dialog.remove-world}"
					marginLeft="5px">
					<effect>
						<onActive name="fade" start="#ff" end="#ff"/>
					</effect>
				</control>
			</panel>
		</panel>
		
	</layer>
	<layer childLayout="vertical">
		<panel width="100%" height="20%" childLayout="vertical" paddingRight="15px" paddingTop="15px">
      						      		
      		<!-- Version -->
      		<text		
				id="txtVersion"
				text="v. 0.0"
				font="galacticum/pixel-font-12.fnt"
				color="#333"				
				width="100%"
				textHAlign="right"
				controller="de.myreality.galacticum.ui.controllers.VersionTextController"
			/>
      		</panel>
	</layer>
</screen>
</nifty>