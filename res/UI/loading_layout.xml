<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://
www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-
gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
<resourceBundle id="dialog" filename="dialog/dialog" />
<useStyles filename="nifty-galacticum-styles.xml" />
<useStyles filename="UI/custom_styles.xml" />
<useControls filename="nifty-default-controls.xml" />
<useControls filename="nifty-myreality-controls.xml" />
<screen id="start" controller="de.myreality.galacticum.states.LoadingGameState">
	<layer childLayout="center" backgroundImage="images/backgrounds/main.png" backgroundColor="#000000aa">
		<effect>
      		<onActive name="changeMouseCursor" id="gameCursor" />
      	</effect>
		<panel childLayout="vertical">
			<effect>
	      		<onActive name="fade" start="#00" end="#ff" length="800"/>
	      	</effect>
			<!-- Caption -->
			<panel childLayout="horizontal" align="center">
				<control
					id="lblCaption"
					name="label"
					color="#bccf39"
					text="caption"
				/>
				<control
					id="lblVersion"
					name="label"
					text="version"
					marginLeft="5px"
					color="#ff6000"
				/>
			</panel>
			
			<!-- Updating Element -->
			<control 
				name="progressbar"
				id="pgbProgress"
				marginTop="15px"
				marginBottom="10px"
			/>
			
			<!-- Description -->
			<panel childLayout="horizontal" align="center">
				<control
					id="lblDescription"
					name="label"
					text="description"
					font="galacticum/pixel-font-12.fnt"
					color="#444"
				/>
				<control
					id="lblDescriptionBonus"
					name="label"
					text="bonus"
					marginLeft="10px"
					color="#8a9448"
					font="galacticum/pixel-font-12.fnt"
				/>
			</panel>
		</panel>
	</layer>
</screen>
</nifty>